<?xml version="1.0"?>

<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="rti_dds_profiles.xsd"
  version="5.1.0">

    <!-- Qos Library -->
	<qos_library name="QosLibrary">
		<qos_profile name="DefaultProfile"
					 base_name="BuiltinQosLibExp::Generic.BestEffort"
					 is_default_qos="true">
			<participant_qos>
				<transport_builtin>
					<mask>UDPV4 | SHMEM</mask>
				</transport_builtin>
			</participant_qos>
		</qos_profile>
	</qos_library>

    <!-- Types Library -->
    <types>
	   	<struct name="MyData">
  			<member name="string_field" stringMaxLength="100" id="0" type="string" key="true"/>
  			<member name="numeric_field" id="1" type="long"/>
  			<member name="bool_field" id="2" type="boolean"/>
		  </struct>
    </types>

    <!-- Domain Library -->
    <domain_library name="MyDomainLibrary">
        <domain name="MyDomain" domain_id="0">
            <register_type name="MyDataType"  type_ref="MyData" />
            <topic name="MyData"    register_type_ref="MyDataType"/>
        </domain>
    </domain_library>

    <!-- Participant library -->
    <domain_participant_library name="MyParticipantLibrary">
      <domain_participant name="MyParticipant" domain_ref="MyDomainLibrary::MyDomain">

        <publisher name="MyPublisher">
				  <data_writer name="MyDataWriter" topic_ref="MyData" />
        </publisher>

        <subscriber name="MySubscriber">
          <data_reader name="MyDataReader" topic_ref="MyData" />
        </subscriber>

     </domain_participant>
   </domain_participant_library>
</dds>
